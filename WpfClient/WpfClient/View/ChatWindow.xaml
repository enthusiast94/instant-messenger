<Window x:Class="WpfClient.View.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:view="clr-namespace:WpfClient.View"
        Title="ChatWindow" Height="600" Width="900" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48*" />
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="716*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderBrush="{StaticResource BorderColor}" BorderThickness="0 0 1 0" Grid.ColumnSpan="2" Margin="0,0,0.111,-0.111">
            <view:ConnectedUsersView DataContext="{Binding ConnectedUsersViewModel}" />
        </Border>
    </Grid>
</Window>